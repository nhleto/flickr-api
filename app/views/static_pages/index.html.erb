<div class="section">
  <div class="columns is-centered">
    <div class="column is-half" style='border:solid black 1px'>

      <div class="has-text-centered">
        <h2 class="title is-2">Welcome to my Flickr API</h2>    
      </div>
      
      <%= simple_form_for(:search, method: 'get') do |f|%>
      <%= f.error_notification %>

      <div class="field">
        <div class="control" >
          <%= f.input :user,
                input_html: { class: 'input', value: '' },
                wrapper: false,
                required: false,
                label_html: { class: 'label' } %>
        </div>
      </div>

      <div class="has-text-centered">
        <h3 class="title is-3 mb-2">OR</h3>
      </div>

      <div class="field">
        <div class="control" >
          <%= f.input :username,
              input_html: { class: 'input', value: '' },
                wrapper: false,
                required: false,
                label_html: { class: 'label'} %>
        </div>
      </div>

      <%= f.submit 'Search' %>

      <% end %>
    </div>

    <div class="column is-half" style='border:solid black 1px'>
      <div class="section">
        <div class="container">
          <% unless @user.nil? || @photos.nil? %>
            <p>
              <%= @user.username %>
            </p>
            <ol>
              <% @photos.each do |photo| %>
                <li>
                  <%= photo.title %>
                  <img src= <%= Flickr.url(photo) %>>
                </li>
              <% end %>
            </ol>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>